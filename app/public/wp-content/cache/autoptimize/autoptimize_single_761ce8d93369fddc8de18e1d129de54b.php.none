.hero{width:100%;height:962px;overflow:hidden;display:flex;align-items:center;justify-content:center;position:relative;text-align:center}.hero img{width:100%;height:962px;object-fit:cover;position:absolute;top:0;left:0}.hero-text h1{width:100%;position:absolute;top:48%;left:50%;transform:translate(-50%,-50%);color:transparent;-webkit-text-stroke:2px #fff;font-family:'Space Mono',monospace;font-size:4rem;text-transform:uppercase;letter-spacing:5px;font-weight:700}@media (max-width:1540px){.hero-text h1{font-size:3.9rem !important;letter-spacing:4px}}@media (max-width:1199px){.hero-text{font-size:3rem;letter-spacing:4px}}@media (max-width:991px){.hero{height:662px}.hero img{height:662px}}@media (max-width:769px){.hero{height:662px}.hero img{height:662px}}@media (max-width:575px){.hero{height:253px}.hero img{height:253px}.hero-text h1{font-size:2rem !important;letter-spacing:4px}}