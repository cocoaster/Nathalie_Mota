.contact-modal{display:none;position:fixed;z-index:1000;left:0;top:0;width:100%;height:100%;overflow:hidden;background-color:rgba(0,0,0,.8);justify-content:center;align-items:center}.contact-modal-content{background-color:#fff;margin:auto;margin-top:150px;padding:20px;border:1px solid #888;width:80%;max-width:600px;box-shadow:0 4px 8px 0 rgba(0,0,0,.2);animation:animatetop .4s;position:relative;padding-top:200px;overflow-x:hidden;border:#000 4px solid}#contact-form{display:flex;flex-direction:column;justify-content:center;margin:auto;width:60%}#contact-header{position:absolute;top:0;right:-17%}input{height:40px;margin-bottom:30px}textarea{height:210px;margin-bottom:30px}button{padding-top:20px;padding-bottom:20px;margin-bottom:30px}@keyframes animatetop{from{top:-300px;opacity:0}to{top:0;opacity:1}}.close{color:#d8d8d8;float:right;font-size:28px;font-weight:700}.close:hover,.close:focus{color:#000;text-decoration:none;cursor:pointer}